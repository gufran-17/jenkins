pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo "Pulling project from GitHub..."
                git branch: 'main', url: 'https://github.com/gufran-17/jenkins.git'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                echo "Copying index.html to Nginx directory..."
                sh '''
                    sudo cp index.html /var/www/html/index.html
                    sudo systemctl restart nginx
                '''
            }
        }

    }

    post {
        success {
            echo "Nginx page deployed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}

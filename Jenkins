pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo "Pulling project code..."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Building Docker image..."
                sh 'docker build -t my-nginx-site:latest .'
            }
        }

        stage('Run Container') {
            steps {
                echo "Running Nginx container..."
                sh '''
                    docker rm -f my-nginx-container || true
                    docker run -d -p 80:80 --name my-nginx-container my-nginx-site:latest
                '''
            }
        }

    }

    post {
        success {
            echo "Deployment Successful!"
        }
        failure {
            echo "Pipeline Failed!"
        }
    }
}

pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                git url: 'https://github.com/gufran-17/jenkins.git', branch: 'main'
            }
        }

        stage('Deploy to Nginx') {
            steps {
                sh '''
                # Copy HTML file to nginx
                sudo cp index.html /var/www/html/index.html

                # Restart nginx
                sudo systemctl restart nginx

                echo "New page deployed successfully!"
                '''
            }
        }
    }
}

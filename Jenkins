pipeline {
    agent any

    stages {

        stage('Checkout from GitHub') {
            steps {
                echo "Cloning repository: https://github.com/gufran-17/jenkins.git"
                
                git branch: 'main',
                    url: 'https://github.com/gufran-17/jenkins.git'
            }
        }

        stage('Validate HTML File') {
            steps {
                echo "Checking if index.html exists..."
                sh '''
                    if [ ! -f index.html ]; then
                        echo "‚ùå ERROR: index.html not found!"
                        exit 1
                    fi
                    echo "‚úî index.html found."
                '''
            }
        }

        stage('Archive Files') {
            steps {
                echo "Archiving website files..."
                archiveArtifacts artifacts: 'index.html', fingerprint: true
            }
        }

        stage('Deploy to Web Server') {
            steps {
                echo "Deploying index.html to /var/www/html/..."
                sh '''
                    sudo cp index.html /var/www/html/index.html
                    echo "‚úî Deployment completed successfully!"
                '''
            }
        }
    }

    post {
        success {
            echo "üéâ Pipeline completed successfully!"
        }
        failure {
            echo "‚ùå Pipeline failed. Check the logs."
        }
    }
}
